<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="395dp"
        app:srcCompat="@drawable/top_background2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create\nAccount"
        android:layout_marginStart="32dp"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/md_amber_600"
        android:layout_below="@id/imageView"
        android:fontFamily="@font/poppins_bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/textTitle"
        app:startIconDrawable="@drawable/ic_profile_black_24dp"
        app:startIconTint="@drawable/auth_state">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:paddingStart="50dp"
            android:inputType="text"
            android:background="@drawable/edittext_bottom_border">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/textInputLayoutName"
        app:startIconDrawable="@drawable/baseline_email_24"
        app:startIconTint="@drawable/auth_state">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:paddingStart="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_bottom_border">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:passwordToggleEnabled="true"
        android:layout_below="@id/textInputLayoutEmail"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:startIconTint="@drawable/auth_state">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:paddingStart="50dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bottom_border">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_signup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cornerRadius="32dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="@drawable/auth_btn_state"
        android:text="Sign Up"
        android:layout_below="@id/textInputLayoutPassword"
        android:fontFamily="@font/poppins_bold">
    </com.google.android.material.button.MaterialButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@id/bt_signup">
        <TextView
            android:id="@+id/newmember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:id="@+id/signup_btn_login"
            android:layout_toRightOf="@id/newmember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Log In"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/md_amber_600">
        </TextView>
    </LinearLayout>
</RelativeLayout>