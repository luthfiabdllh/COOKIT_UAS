<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/item_background"
    android:orientation="horizontal"
    android:paddingRight="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:clipChildren="true"
        android:clipToPadding="true">
        <ImageView
            android:id="@+id/item_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/testimg" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_bookmark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/favorite_item_background"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="10dp"
        app:contentPaddingBottom="10dp"
        app:contentPaddingTop="10dp"
        app:contentPaddingLeft="25dp"
        app:contentPaddingRight="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/white">
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Recipe"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                />

            <TextView
                android:id="@+id/item_desciptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum dilor sit amet sajdb asjd bja sbda sdihi a shd sad asdkbs..."
                android:textSize="12dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/poppins_regular"
                />

            <TextView
                android:id="@+id/item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Chef Andrew"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                />
    </LinearLayout>

</LinearLayout>