<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        >
        <ImageView
            android:id="@+id/item_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:src="@drawable/testimg" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_back"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="58dp"
            android:padding="4dp"
            android:background="@color/transparent"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Back"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="-48dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_layout"
        android:background="@drawable/detail_layout"
        android:paddingTop="48dp"
        android:paddingHorizontal="25dp"
        >
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Recipes"
            android:textSize="32dp"
            android:fontFamily="@font/poppins_bold"
        />
        <TextView
            android:id="@+id/item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:text="Chef Author"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            />
        <View
            android:layout_marginVertical="16dp"
            android:id="@+id/line1"
            android:layout_below="@id/item_author"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
        <TextView
            android:id="@+id/label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:text="Description"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/label_description"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            />
        <View
            android:layout_marginVertical="16dp"
            android:id="@+id/line2"
            android:layout_below="@id/item_description"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/label_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:text="Ingredients"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:id="@+id/item_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/label_ingredient"
            android:text="- Ingredient 1"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            />
        <View
            android:layout_marginVertical="16dp"
            android:id="@+id/line3"
            android:layout_below="@id/item_ingredient"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/label_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line3"
            android:text="Steps"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:id="@+id/item_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_below="@id/label_step"
            android:text="1. Step 1"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_regular"
            />

    </RelativeLayout>
</RelativeLayout>