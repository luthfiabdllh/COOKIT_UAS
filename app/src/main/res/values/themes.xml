<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.COOKIT" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_amber_600</item>
        <item name="colorPrimaryVariant">@color/md_amber_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_200</item>
        <item name="colorSecondaryVariant">@color/md_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Latar belakang splash -->
        <item name="windowSplashScreenBackground">@color/md_amber_300</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- Durasi animasi -->
        <item name="postSplashScreenTheme">@style/Theme.COOKIT</item>
    </style>
</resources>